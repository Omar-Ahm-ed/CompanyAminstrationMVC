@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Existing styles */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1310px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    .search-form {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

        .search-form input[type="text"] {
            width: 80%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .search-form input[type="submit"] {
            background-color: #4CAF50;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .search-form input[type="submit"]:hover {
                background-color: #3e8e41;
            }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #f0f0f0;
        font-weight: bold;
    }

    /* Badge Styles */
    .badge {
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 0.9em;
    }

    .badge-admin {
        background-color: #dc3545;
        color: #fff;
    }

    .badge-user {
        background-color: #007bff;
        color: #fff;
    }

    .badge-moderator {
        background-color: #ffc107;
        color: #fff;
    }

    .badge-default {
        background-color: #6c757d;
        color: #fff;
    }

</style>

@functions {
    public string GetBadgeClass(string role)
    {
        return role switch
        {
            "ADMIN" => "badge-admin",
            "HR" => "badge-user",
            "Moderator" => "badge-moderator",
            _ => "badge-default"
        };
    }
}

<div class="container">
    <h1>All Users</h1>

    <div class="search-form">
        <form asp-action="Index">
            <div class="row m-5">
                <div class="col-8">
                    <input type="text" name="searchInput" id="searchInput" placeholder="Search By Email..." class="form-control" />
                </div>
                <div class="col-4">
                    <input type="submit" value="Search" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>

    <br />
    <br />

    @if (Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(d => d.FirstName)</th>
                    <th>@Html.DisplayNameFor(d => d.LastName)</th>
                    <th>@Html.DisplayNameFor(d => d.Email)</th>
                    <th>@Html.DisplayNameFor(d => d.Roles)</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <input type="hidden" asp-for="@user.Id" />
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            @foreach (var role in user.Roles)
                            {
                                <span class="badge @GetBadgeClass(role)">@role</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-warning">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                            
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-success">
                                <i class="fas fa-edit"></i> Update
                            </a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="mt-4 alert alert-warning">
            <h4>There are No Users :(</h4>
        </div>
    }
</div>
